{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "module": "CommonJS",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": false,
    "composite": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./src",
  },
  "include": ["./src/**/*", "./src/**/*.json", "./bin/**/*"],
  "exclude": [
    "**/*.d.ts",
    "./node_modules",
    "dist"
  ]
}
